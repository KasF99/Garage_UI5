<mvc:View
    controllerName="ui5.walkthrough.controller.Edit"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        title="Edit Page"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <content>
             <Panel headerText="Car Details" class="sapUiResponsiveMargin" width="auto">
                <l:VerticalLayout class="sapUiContentPadding">
                    <Label text="Car Name" design="Bold" />
                    <Input id="nameInput" value="{Backend>name}" />
                    <Label text="Car Price" design="Bold" />
                    <Input id="priceInput" value="{Backend>price}" />
                </l:VerticalLayout>
            </Panel>
            <Panel headerText="Member Details" class="sapUiResponsiveMargin" width="auto">
                <l:VerticalLayout class="sapUiContentPadding">
                    <Label text="First Name" design="Bold" />
                    <Input id="firstNameInput" value="{Backend>Member/firstName}" />
                    <Label text="Last Name" design="Bold" />
                    <Input id="lastNameInput" value="{Backend>Member/lastName}" />
                    <Label text="Email" design="Bold" />
                    <Input id="emailInput" value="{Backend>Member/email}" />
                    <Label text="Phone" design="Bold" />
                    <Input id="phoneInput" value="{Backend>Member/phone}" />
                </l:VerticalLayout>
            </Panel>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <Button text="Save" press=".onSavePress" />
                    <Button text="Cancel" press=".onCancelPress" />
                </contentLeft>
            </Bar>
        </footer>
    </Page>
</mvc:View>
